import random
q = int(input('Enter the number of friends joining (including you):\n'))
friends = {}
if q < 1:
    print("No one is joining for the party")
else:
    a = input("Enter the name of every friend (including you), each on a new line:\n")
    friends[a] = 0
    p = 1
    while q != 1:
        a = input()
        friends[a] = 0
        q -= 1
        p += 1
        if a == "":
            break
    b = int(input("Enter the total bill value:\n"))
    c = input('Do you want to use the "Who is lucky?" feature? Write Yes/No:\n')
    if c == "Yes":
        lucky = random.choice(list(friends.keys()))
        friends.pop(lucky)
        p -= 1
        calc = b / p
        for key in friends:
            friends.update({key: round(calc, 2)})
        friends[lucky] = 0
        print(lucky, "is the lucky one!")
        print(friends)
    else:
        calc = b / p
        for key in friends:
            friends.update({key: round(calc, 2)})
        print("No one is going to be lucky")
        print(friends)
